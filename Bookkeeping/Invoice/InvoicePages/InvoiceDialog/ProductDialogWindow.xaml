<Window x:Class="dksApp.Bookkeeping.Invoice.InvoicePages.InvoiceDialog.ProductDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dksApp.Bookkeeping.Invoice.InvoicePages.InvoiceDialog"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
            Title="ProductDialogWindow" Height="150" Width="300" Background="Transparent" WindowStartupLocation="CenterOwner" WindowStyle="None"
AllowsTransparency="True">
    
    <Border Background="#eff2f7" CornerRadius="30">

        <Grid>
            <StackPanel Margin="20">
                <CheckBox Content="Nowy" x:Name="NewCheckBox"/>
                <CheckBox Content="Zapisany" x:Name="SavedCheckBox"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="OK" Style="{StaticResource addButton}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    <Button Content="Anuluj" Margin="10,0,0,0" Style="{StaticResource addButton}" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
    </Border>
</Window>
